	string getUserInfo(string idpfu )
	{
		sqlParams.Clear();

		string _getUserInfo = "";
		if(!string.IsNullOrEmpty(CStr(idpfu)))
		{	
			sqlParams.Add("@idpfu",CLng(idpfu));
			TSRecordSet rs = cdf.GetRSReadFromQuery_("select pfuTitolo,pfunome from profiliutente where idpfu = @idpfu", ApplicationCommon.Application.ConnectionString, sqlParams);
			if(rs.RecordCount == 0)
			{
				_getUserInfo = "";
			}
			else
			{
				_getUserInfo = GetValueFromRS(rs.Fields["pfuTitolo"]) + " " + GetValueFromRS(rs.Fields["pfunome"]);
			}
		}
		return _getUserInfo;
	}
